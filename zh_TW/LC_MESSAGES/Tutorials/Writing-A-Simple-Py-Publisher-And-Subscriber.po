"\n"
"    minimal_publisher = MinimalPublisher()\n"
"\n"
"    rclpy.spin(minimal_publisher)\n"
"\n"
"    # Destroy the node explicitly\n"
"    # (optional - otherwise it will be done automatically\n"
"    # when the garbage collector destroys the node object)\n"
