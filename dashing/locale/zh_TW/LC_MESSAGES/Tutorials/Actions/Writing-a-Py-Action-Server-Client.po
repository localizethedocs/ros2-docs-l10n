"partial_sequence))\n"
"\n"
"\n"
"def main(args=None):\n"
"    rclpy.init(args=args)\n"
"\n"
"    action_client = FibonacciActionClient()\n"
"\n"
"    action_client.send_goal(10)\n"
"\n"
"    rclpy.spin(action_client)\n"
"\n"
"\n"
"if __name__ == '__main__':\n"
